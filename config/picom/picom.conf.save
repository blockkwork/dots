backend = "glx";
glx-no-stencil = true;
glx-copy-from-front = false;
glx-swap-method = 2;

# Opacity
active-opacity = 0.85;
inactive-opacity = 0.80;
frame-opacity = 1;
inactive-opacity-override = false;
blur-background = false;

blur-method = "dual_kawase";
blur-strength = 3;

# Fading
fading = true;
fade-delta = 10;
no-fading-openclose = false/;

fade-exclude = [ ];

# Window type settings
wintypes:
{
		dock = {
				shadow = false;
		};
};

opacity-rule = [
    "90:class_g = 'Wezterm' && focused",
    "80:class_g = 'Wezterm' && !focused"
];

xrender-sync-fence = true;

corner-radius = 15
